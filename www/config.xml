    <description>
    </description>
	
	<plugin name="com.phonegap.plugins.barcodescanner" spec="6.0.2" />
    <plugin name="cordova-plugin-email-composer" spec="0.8.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.0" />
    <plugin name="nl.x-services.plugins.socialsharing" spec="5.1.3" />
    <plugin name="org.apache.cordova.device" spec="1.1.3" />
